<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  <display-name>UMS</display-name>
   <welcome-file-list>
   
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
 <!-- Welcome File -->
 

  <!-- Registration Controller -->
  <servlet>
    <display-name>RegistrationController</display-name>
    <servlet-name>RegistrationController</servlet-name>
    <servlet-class>org.cms.controller.RegistrationController</servlet-class>
    
    <init-param>
      <param-name>username</param-name>
      <param-value>root</param-value>
    </init-param>
    <init-param>
      <param-name>password</param-name>
      <param-value>root</param-value>
    </init-param>
    <init-param>
      <param-name>driver</param-name>
      <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>RegistrationController</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <!-- Login Controller -->
  <servlet>
    <display-name>LoginController</display-name>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>org.cms.controller.LoginController</servlet-class>
  </servlet>

 

  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
 
   <servlet>
  <display-name>AdminServlet</display-name>
  <servlet-name>AdminServlet</servlet-name>
  <servlet-class>org.cms.controller.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>AdminServlet</servlet-name>
  <url-pattern>/admin</url-pattern></servlet-mapping>
   <servlet>
    <display-name>UserServlet</display-name>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>org.cms.controller.UserServlet</servlet-class>
  </servlet>

  <!-- Context Parameters -->
  <context-param>
    <param-name>admin</param-name>
    <param-value>admin@presidencyuniversity.in</param-value>
  </context-param>
  <context-param>
    <param-name>adminPassword</param-name>
    <param-value>admin123</param-value>
  </context-param>

</web-app>